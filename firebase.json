{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "functions",
      "node_modules",
      ".git",
      ".gitignore",
      "README.md"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}